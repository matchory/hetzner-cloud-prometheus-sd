{
    "name": "@matchory/hetzner-cloud-prometheus-sd",
    "version": "0.1.1",
    "description": "A simple web server exposing Hetzner cloud instances for consumption by the Prometheus HTTP service discovery.",
    "tags": [
        "prometheus",
        "service-discovery",
        "hetzner",
        "hetzner-cloud",
        "hcloud",
        "metrics"
    ],
    "repository": "https://github.com/matchory/hetzner-cloud-prometheus-sd",
    "author": "Moritz Friedrich <moritz@matchory.com>",
    "license": "MIT",
    "private": false,
    "type": "module",
    "main": "dist/index.mjs",
    "module": "dist/index.mjs",
    "bin": {
        "hetzner-sd": "dist/index.mjs"
    },
    "devDependencies": {
        "typescript": "^4.8.4"
    },
    "dependencies": {
        "@types/node": "^18.8.2",
        "@types/yargs": "^17.0.13",
        "ip-range-check": "^0.2.0",
        "node-fetch": "^3.2.10",
        "prom-client": "^14.1.0",
        "yaml": "^2.1.3",
        "yargs": "^17.6.0"
    },
    "scripts": {
        "build": "tsc",
        "dev": "tsc && node dist/index.mjs",
        "serve": "node dist/index.mjs",
        "check": "tsc --noEmit --pretty",
        "release": "npx np@latest"
    },
    "publishConfig": {
        "access": "public"
    },
    "files": [
        "bin",
        "src",
        "dist",
        "!dist/.tsbuildinfo",
        "README.md",
        "LICENSE"
    ]
}
